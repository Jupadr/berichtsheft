{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Benutzerliste</h1>

    <table border="1">
        <thead>
            <tr>
                <th>Aktionen</th>
                <th>ID</th>
                <th>Nutzername</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Ausbilder</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>
                        <a href="{{ path('administration_editUser', {userId: user.id}) }}">Bearbeiten</a>
                        <a href="{{ path('administration_deleteUser', {userId: user.id}) }}">LÃ¶schen</a>
                    </td>
                    <td>{{user.id}}</td>
                    <td>{{user.username}}</td>
                    <td>{{user.firstname}}</td>
                    <td>{{user.lastname}}</td>
                    <td>{{user.instructor ? 'Ja' : ''}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}